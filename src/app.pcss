  @media (prefers-color-scheme: dark) {

    /* DARK MODE DEFAULTS */

    :root {
      --background: hsl(0, 0%, 8%);
      --foreground: hsl(0 0% 98%);

      --muted: hsl(0 0% 14.9%);
      --muted-foreground: hsl(0 0% 63.9%);

      --popover: hsl(0 0% 3.9%);
      --popover-foreground: hsl(0 0% 98%);

      --card: hsl(0 0% 3.9%);
      --card-foreground: hsl(0 0% 98%);

      --border: hsl(0, 0%, 16%);
      --input: hsl(0 0% 14.9%);

      --primary: hsl(0 0% 98%);
      --primary-foreground: hsl(0 0% 9%);

      --secondary: hsl(0 0% 14.9%);
      --secondary-foreground: hsl(0 0% 98%);

      --accent: hsl(0 0% 14.9%);
      --accent-foreground: hsl(0 0% 98%);

      --destructive: hsl(0, 77%, 45%);
      --destructive-foreground: hsl(0 0% 98%);

      --ring: 0 0% 83.1%;

      --text-primary: #ffffff;
      --text-secondary: rgb(229 229 229);
    }

  }
}

@layer base {
  * {
    @apply border-border;
  }

  body {
    @apply bg-background text-white;
  }
}

@layer components {
  .context-item-button {
    @apply px-2 py-1 hover:bg-neutral-700 rounded w-full text-left
  }

  .context-item {
    @apply px-2 py-1 rounded w-full text-left
  }

  .context-container {
    @apply
  }
}

/* 3B854B */



html[data-theme="dracula"] {
  --sidebar-accent: #c061cb;
  --accent-widget: #9141ac;
  --accent-widget-border: #813d9c;

  --muted: #2d2541;

  --background: #241f31;
  --background-secondary: #353141;

  --accent-fab: #9141ac;
  --accent-fab-foreground: #dbb1db;

  --text-primary: #ffffff;
  --text-secondary: rgb(229 229 229);

  --primary: hsl(0 0% 98%);
  --primary-foreground: #1e192b;

  --destructive: #c01c28;

}

html[data-theme="theme2"] {
  --color-primary: #f4cc70;
}