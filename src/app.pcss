@tailwind base;
@tailwind components;
@tailwind utilities;

/* REMINDER: FOLLOW THE ADW NAMED COLORS CONVENTION FOR EASIER NAMED COLORS */
/* https://gnome.pages.gitlab.gnome.org/libadwaita/doc/1.0/named-colors.html */
/* Gradience from flathub is kinda useful */


@layer base {
  :root {

    /* LIGHT MODE DEFAULTS */

    --background: #f2f1f6;
    --background-secondary: #ebebeb;

    --foreground: hsl(0 0% 3.9%);

    --muted: hsl(0 0% 96.1%);
    --muted-foreground: hsl(0 0% 45.1%);

    --popover: hsl(0 0% 100%);
    --popover-foreground: hsl(0 0% 3.9%);

    --card: hsl(0 0% 100%);
    --card-foreground: hsl(0 0% 3.9%);

    --border: hsl(0 0% 89.8%);
    --input: hsl(0 0% 89.8%);

    --primary: hsl(0 0% 9%);
    --primary-foreground: hsl(0, 0%, 85%);

    --secondary: hsl(0, 0%, 9%);
    --secondary-foreground: hsl(0 0% 9%);

    --accent: hsl(0 0% 96.1%);
    --accent-foreground: hsl(0 0% 9%);

    --destructive: hsl(0 72.2% 50.6%);
    --destructive-foreground: hsl(0 0% 98%);

    --ring: hsl(0 0% 3.9%);

    --radius: 0.5rem;

    --sidebar-accent: #3B854B;

    --accent-fab: #3B854B;
    --accent-fab-foreground: #6ee7b7;

    --accent-widget: #EF3F18;
    --accent-widget-border: #B62100;

    --text-primary: #000000;
    --text-secondary: rgb(39, 39, 39);



  }

